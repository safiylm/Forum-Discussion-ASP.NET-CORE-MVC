    $(".div-btn-choix button").css("color", "#7b8598");
    $(".div-btn-choix button").css("background-color", "transparent");
    $("#btn-mes-donnees-personnelles").css("color", "#f3ebff");
    $("#btn-mes-donnees-personnelles").css("background-color", "#9a7ce3");

  
