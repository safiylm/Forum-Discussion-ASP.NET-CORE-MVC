    ViewData["Title"] = "Mes données personnelles";
}
<partial name="../Shared/Nav_connected.cshtml" />


<link rel="stylesheet" href="~/css/questions.css" />


<div class="container">
    <main role="main" class="pb-3">



<div class="div-btn-choix">
