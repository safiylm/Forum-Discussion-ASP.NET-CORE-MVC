    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NameUser)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NameUser)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd class = "col-sm-10">
