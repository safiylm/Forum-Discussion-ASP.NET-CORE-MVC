@model IEnumerable<Forum_descussion_ASP.NET_core_mvc.Models.ResponseModel>

@{
    ViewData["Title"] = "Details";
    var iduser = ViewData["iduser"];
}

@if (ViewData["iduser"] == null)
{
    <partial name="../Shared/Nav_non_connected.cshtml" />

}
else
{
    <partial name="../Shared/Nav_connected.cshtml" />

}
<div class="container">
    <main role="main" class="pb-3">

        <h1>
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" color="#9a7ce3" fill="currentColor" class="bi bi-chat" viewBox="0 0 16 16">
                <path d="M2.678 11.894a1 1 0 0 1 .287.801 10.97 10.97 0 0 1-.398 2c1.395-.323 2.247-.697 2.634-.893a1 1 0 0 1 .71-.074A8.06 8.06 0 0 0 8 14c3.996 0 7-2.807 7-6 0-3.192-3.004-6-7-6S1 4.808 1 8c0 1.468.617 2.83 1.678 3.894zm-.493 3.905a21.682 21.682 0 0 1-.713.129c-.2.032-.352-.176-.273-.362a9.68 9.68 0 0 0 .244-.637l.003-.01c.248-.72.45-1.548.524-2.319C.743 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7-3.582 7-8 7a9.06 9.06 0 0 1-2.347-.306c-.52.263-1.639.742-3.468 1.105z" />
            </svg>
            <a asp-controller="home" asp-action="Index"> Forum-Discussion</a> > <a asp-action="Index"> Les Questions </a> >Question


        </h1>

        <div class="forum-question1">
            <div class="question-categorie"> Posted in: <a>@ViewData["Topic"]</a></div>
            <h3 class="question-titre">@ViewData["Titre"]  </h3>

            <div class="div-persona">
                <img class="question-auteur-image" src="data:image/jpeg;base64," />
                <div>
                    <div class="question-auteur-nom"> @ViewData["NameUser"]  </div>
                    <div class="question-date-creation">
                        @ViewData["DateCreation"] 
                    </div>
                </div>
            </div>

            <div class="question-contenu">                    
                    @ViewData["Description"] 
            </div>

        </div>


    @foreach (var item in Model)
    {
      

    <div class="forum-reponse">

        <div class="div-persona">
            <img class="reponse-auteur-image" src="data:image/jpeg;base64," />
            <div>
                <div class="reponse-auteur-nom">  @Html.DisplayFor(modelItem => item.User.NameUser ) </div>
                <div class="reponse-date-creation">  @Html.DisplayFor(modelItem => item.DateCreation) </div>
            </div>
        </div>


        <div class="reponse-contenu">
                @Html.DisplayFor(modelItem => item.ResponseContent)
        </div>

@*            Impossible d'appliquer l'opérateur '==' aux opérandes de type 'int' et 'object'	
*@
                @*@if ( @item.UserId == @ViewData["iduser"] )*@
         <a class="btnnn" asp-controller="Response" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
         <a class="btnnn" asp-controller="Response" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
    </div>  

    }


        <a class="btnnn" asp-controller="response" asp-action="Create" asp-route-id="@ViewData["idquestion"]" style="margin-left:20px;">
            Ajouter une réponse </a>
        </br>
        </br>
        </br>
    </br>
    </br>
    </br>
    </br>
    </br>
    </br>
        </br>

<style>
    h1 {
        font-size: 18px;
    }

    h1 a{
        text-decoration:none;
        color:black;
    }

    .forum-question1 h3 {
        margin: 20px 0;
    }

    .forum-reponse, .forum-question1 {
        /*width: 1100px;*/
        border: 1px solid lightgray;
        border-radius: 15px;
        padding: 20px;
        margin: 50px 20px;
    }

    .div-persona {
        margin-bottom: 30px;
        display: flex;
        flex-direction: row;
    }

        .div-persona img {
            width: 50px;
            height: 50px;
            object-fit: cover;
            border-radius: 50%;
        }

    .div-like-dislike {
        margin-left: 50px;
        display: flex;
        flex-direction: row;
    }

    .div-like-dislike-comment button {
        border: none;
        background-color: transparent;
        margin: 15px;
        margin-left: 0;
    }

        .div-like-dislike-comment button svg {
            color: lightgray;
            margin-right: 4px;
        }

    .reponse-contenu, .question-contenu {
        margin-left: 50px;
    }

    .div-like-dislike-comment {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
    }

            a {
                text-decoration: none;
                color: dimgrey;
            }

            .reponse-contenu{
                padding: 20px 0;
           }

            .btnnn {
                background-color: #9a7ce3;
                color: white;
                padding: 7px 13px;
                border-radius: 7px;
            }
</style>

    </main></div>