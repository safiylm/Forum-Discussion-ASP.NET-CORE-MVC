@model IEnumerable<Forum_descussion_ASP.NET_core_mvc.Models.QuestionModel>

@{
    ViewData["Title"] = "Index";
}


<link rel="stylesheet" href="~/css/questions.css" />

@if (ViewData["iduser"] == null)
{
    <partial name="../Shared/Nav_non_connected.cshtml" />
}
else
{
    <partial name="../Shared/Nav_connected.cshtml" />
}

<div class="container">
    <main role="main" class="pb-3">

        <div id="userpartialzone"> </div>



<div id="div-nn-repondu">

    <div class="div-liste-questions">

        @if ( Model.Count() ==0)
        {
            <p></p>
            <p>Aucune question créee.</p>
        }

        @foreach (var item in Model) {                   

     @*   <a asp-action="Details" asp-route-id="@item.Id">
              @Html.DisplayFor(modelItem => item.User.ID)
       </a> *@
          <input type="hidden" id="userId" value="@item.UserId" />
        <div class="question">

            <div class="titre">
                <a asp-area="" asp-controller="Forum" asp-action="Index">

                    <h3>
                        <a asp-action="Details" asp-route-id="@item.Id">
                            @Html.DisplayFor(modelItem => item.Titre)
                                        @if (item.isResolu)
                                        {
                                            <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" color="#318CE7" fill="currentColor" class="bi bi-patch-check-fill" viewBox="0 0 16 16">
                                                <path d="M10.067.87a2.89 2.89 0 0 0-4.134 0l-.622.638-.89-.011a2.89 2.89 0 0 0-2.924 2.924l.01.89-.636.622a2.89 2.89 0 0 0 0 4.134l.637.622-.011.89a2.89 2.89 0 0 0 2.924 2.924l.89-.01.622.636a2.89 2.89 0 0 0 4.134 0l.622-.637.89.011a2.89 2.89 0 0 0 2.924-2.924l-.01-.89.636-.622a2.89 2.89 0 0 0 0-4.134l-.637-.622.011-.89a2.89 2.89 0 0 0-2.924-2.924l-.89.01zm.287 5.984-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7 8.793l2.646-2.647a.5.5 0 0 1 .708.708" />
                                            </svg>
                                        }
                        </a>
                    </h3>
                    <p>
                        <a asp-action="Details" asp-route-id="@item.Id">
                                        @Html.Raw( item.Description)
                        </a>
                    </p>
                </a>
            </div>

                        <div class="div-categorie">

                            <a href="/Topic/TopicName?name=@item.Topic">
                                @Html.DisplayFor(modelItem => item.Topic)
                            </a>

                        </div>

         </div>
        }
      </div>
  

        <div id="userlistpartialzone"> </div>

     
      </div>

        

   </main></div>

    <script>
    </script>
        

<script>
    $(".div-btn-choix").css("justify-content", "center")
    $("#mes-donnees-personnelles-contenu").show()
    $(".div-btn-choix button").css("color", "#7b8598");
    $(".div-btn-choix button").css("background-color", "transparent");
    $("#btn-mes-questions").css("color", "#f3ebff");
    $("#btn-mes-questions").css("background-color", "#9a7ce3");


</script>

